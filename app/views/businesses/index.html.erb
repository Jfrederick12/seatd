<p id="notice"><%= notice %></p>
<h1>Listing Businesses</h1>

<table>
  <thead>
    <tr>
  </thead>

  <tbody>
    <% @businesses.each do |business| %>
      <div class="business-container">
        <ul>
          <p><strong><a href="/businesses/<%=business.id%>"><%= business.business_name %></a></strong></p>
          <li><%= business.address %></li>
          <li>Opens at: <%= date_time_helper(business.open_at) %></li>
          <li>Closes at: <%= date_time_helper(business.close_at) %></li>
        </ul>
      </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Business', new_business_path %>

